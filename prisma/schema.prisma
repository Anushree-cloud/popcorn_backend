// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model organization {
  id         Int      @id @default(autoincrement())
  name       String
  email      String
  phone      Int
  address    String
  website    String
  logo_url   String
  created_at DateTime @default(dbgenerated("('now'::text)::timestamp(6) with time zone")) @db.Timestamp(6)
  updated_at DateTime @default(dbgenerated("('now'::text)::timestamp(6) with time zone")) @db.Timestamp(6)

  //relations
  users users[]
}

model users {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  first_name    String?   @db.VarChar(255)
  last_name     String?   @db.VarChar(255)
  date_of_birth DateTime?
  blood_group   String?
  password      String
  created_at    DateTime  @default(dbgenerated("('now'::text)::timestamp(6) with time zone")) @db.Timestamp(6)
  updated_at    DateTime  @default(dbgenerated("('now'::text)::timestamp(6) with time zone")) @db.Timestamp(6)

  //relations
  org    organization @relation(fields: [org_id], references: [id])
  org_id Int

  role    roles @relation(fields: [role_id], references: [id])
  role_id Int
}

model roles {
  id           Int      @id @default(autoincrement())
  role_name    String?
  display_name String?
  created_at   DateTime @default(dbgenerated("('now'::text)::timestamp(6) with time zone")) @db.Timestamp(6)
  updated_at   DateTime @default(dbgenerated("('now'::text)::timestamp(6) with time zone")) @db.Timestamp(6)

  //relations
  users users[]
}
